<section class="loginPage">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="text-light ms-3">Login</h2>
                <form method="post" action="/login" class="gameFormBar mt-3" id="loginForm">
                    <div class="form-group gameForm">
                        <label for="userName">User</label>
                        <input name="userName" type="text" class="form-control" placeholder="Enter user name" required>
                        <span class="text-success"></span>
                    </div>
                    <div class="form-group gameForm mt-4">
                        <label for="password">Password</label>
                        <input name="password" type="password" class="form-control" placeholder="Enter password" required>
                        <span class="text-success"></span>
                    </div>
                    {{#if err}}
                    <div class="form-group gameForm mt-3 pb-1">
                        <small class="text-danger">{{err}}</small>
                    </div>
                    {{/if}}
                    <div class="form-group gameForm mt-3">
                        <a href="/signup" class="loginTextLink">Create a new account ?</a>
                    </div>
                    <button type="submit" class="btn btn-primary gameForm mt-4 w-25">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
$("#loginForm").validate({
  submitHandler: function(form) {
    form.submit();
  }
 });
</script>