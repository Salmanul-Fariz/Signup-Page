<section class="gameAdd">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="text-light ms-3">Edit Games</h2>
                <form method="post" action="/admin/edit-user/{{details._id}}" class="gameFormBar mt-3">
                    <div class="form-group gameForm">
                        <label for="fullName">Full Name</label>
                        <input name="fullName" type="text" class="form-control" value="{{details.fullName}}" required>
                    </div>
                    <div class="form-group gameForm mt-4">
                        <label for="email">E mail</label>
                        <input name="email" type="text" class="form-control" value="{{details.email}}" required>
                    </div>
                    <div class="form-group gameForm mt-4">
                        <label for="userName">User Name</label>
                        <input name="userName" type="text" class="form-control" value="{{details.userName}}" required>
                    </div>
                    <button type="submit" class="btn btn-primary gameForm mt-4 w-25">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>