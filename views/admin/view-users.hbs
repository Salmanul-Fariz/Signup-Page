<section class="viewProducts">
    <div class="container-fluid view-users">
        <table class="table gamesList mt-5" id="userTable">
            <thead class="mt-4">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Full Name</th>
                    <th scope="col" class="viewTitle">Email</th>
                    <th scope="col">User Name</th>
                    <th scope="col" class="viewUser">Edit</th>
                    <th scope="col" class="viewUser">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.fullName}}</td>
                    <td class="viewTitle">{{this.email}}</td>
                    <td>{{this.userName}}</td>
                    <td class="viewUser"><a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td class="viewUser"><a href="/admin/delete-user?id={{this._id}}" onclick="return confirm('Are you want to delete {{this.fullName}} ?')" class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
  $(document).ready(function(){
    $("#userTable").DataTable();
  })
</script>
