<section class="gameAdd">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="text-light ms-3">Add Games</h2>
                <form method="post" action="/admin/add-game" enctype="multipart/form-data" class="gameFormBar mt-3">
                    <div class="form-group gameForm">
                        <label for="gameName">Game Name</label>
                        <input name="gameName" type="text" class="form-control" placeholder="Enter Name" required>
                    </div>
                    <div class="form-group gameForm mt-4">
                        <label for="gameTitle">Game title</label>
                        <input name="gameTitle" type="text" class="form-control" placeholder="Enter title" required>
                    </div>
                    <div class="form-group gameForm mt-4">
                        <label for="gameImage">Choose Thumbnail</label>
                        <input name="gameImage" type="file" class="form-control" required>
                    </div>
                    <div class="form-group gameForm mt-4">
                        <label for="gamePrice">Game price</label>
                        <input name="gamePrice" type="number" class="form-control" placeholder="Enter Price" required>
                    </div>
                    <button type="submit" class="btn btn-primary gameForm mt-4 w-25">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>